<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_onboarder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboarderActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_onboarder_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/circle_indicator_view"
        app:layout_constraintEnd_toEndOf="@id/vp_onboarder_pager"
        app:layout_constraintStart_toStartOf="@id/vp_onboarder_pager"
        tools:text="Get started" />

    <com.rd.PageIndicatorView
        android:id="@+id/circle_indicator_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@id/vp_onboarder_pager"
        app:layout_constraintLeft_toLeftOf="@id/vp_onboarder_pager"
        app:layout_constraintRight_toRightOf="@id/vp_onboarder_pager"
        app:piv_animationType="worm" />

</android.support.constraint.ConstraintLayout>